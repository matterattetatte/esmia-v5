<script>
// Preload your placeholder image early
new Image().src = '/images/iframe-profile.webp';

document.addEventListener('DOMContentLoaded', () => {
  // 1. Load the Facebook widget script only now
  const script = document.createElement('script');
  script.src = '/scripts/iframe-widget.js';
  script.defer = true;           // still respectful
  document.head.appendChild(script);

  // 2. Replace Facebook profile/post images as soon as they appear
  const replaceImages = () => {
    document.querySelectorAll('img[alt="sk-header-picture"], img[alt="sk-post-userpic"]')
      .forEach(img => {
        if (!img.src.includes('/images/iframe-profile.webp')) {
          img.src = '/images/iframe-profile.webp';
          img.srcset = ''; // kill any Facebook srcset
        }
      });
  };

  // Run immediately (in case widget already injected something)
  replaceImages();

  // And keep running whenever new content is added (Facebook loads async)
  const observer = new MutationObserver(replaceImages);
  observer.observe(document.body, { childList: true, subtree: true });
});
</script>

</div>