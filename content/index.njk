<script>


new Image().src = '/images/iframe-profile.webp';

setInterval(() => {
    const images = document.querySelectorAll(
  'img[alt="sk-header-picture"]:not([src^="/"]), img[alt="sk-post-userpic"]:not([src^="/"])'
)
    if (images.length > 0) {
        images.forEach(img => {
            console.log('found image to update:', img);
            img.src = '/images/iframe-profile.webp';
